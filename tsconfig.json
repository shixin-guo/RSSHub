{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "jsx": "react-jsx",
        "jsxImportSource": "hono/jsx",
        "baseUrl": ".",
        "paths": {
            "@/*": ["lib/*"]
        },
        "outDir": "./dist",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "declaration": true,
        "sourceMap": true,
        "resolveJsonModule": true,
        "allowJs": true,
        "noEmit": false,
        "isolatedModules": true,
        "strict": false,
        "noImplicitAny": false
    },
    "include": [
        "./lib/pkg.ts",
        "./lib/config.ts",
        "./lib/app.ts",
        "./lib/utils/logger.ts",
        "./lib/utils/rand-user-agent.ts",
        "./lib/utils/request-rewriter/**/*",
        "./lib/utils/proxy/**/*",
        "./lib/utils/ofetch.ts",
        "./lib/middleware/**/*",
        "./lib/views/**/*"
    ],
    "exclude": ["node_modules", "*.test.*"]
}
