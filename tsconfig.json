{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "node",
        "strict": true,
        "jsx": "react-jsx",
        "jsxImportSource": "hono/jsx",
        "baseUrl": ".",
        "paths": {
            "@/*": ["lib/*"]
        },
        "esModuleInterop": true,
        "noImplicitAny": false,
        "outDir": "./dist",
        "skipLibCheck": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "incremental": true,
        "resolveJsonModule": true,
        "isolatedModules": true
    },
    "include": ["./lib/**/*", "./api/vercel.ts", "./types/**/*"],
    "exclude": ["node_modules", "*.test.*"]
}
