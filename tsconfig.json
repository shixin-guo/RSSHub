{
    "compilerOptions": {
        "target": "ESNext",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "jsx": "react-jsx",
        "jsxImportSource": "hono/jsx",
        "baseUrl": ".",
        "paths": {
            "@/*": ["./lib/*"]
        },
        "outDir": "./dist",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "declaration": true,
        "sourceMap": true,
        "resolveJsonModule": true,
        "allowJs": true,
        "strict": false
    },
    "include": [
        "./lib/pkg.ts",
        "./lib/config.ts",
        "./lib/app.ts",
        "./lib/utils/logger.ts"
    ],
    "exclude": ["node_modules", "*.test.*"]
}
