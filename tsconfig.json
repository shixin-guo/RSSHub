{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "jsx": "react-jsx",
        "jsxImportSource": "hono/jsx",
        "baseUrl": ".",
        "paths": {
            "@/*": ["lib/*"]
        },
        "outDir": "./dist",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "declaration": true,
        "sourceMap": true,
        "resolveJsonModule": true,
        "allowJs": true,
        "noEmit": false,
        "isolatedModules": true,
        "strict": false,
        "noImplicitAny": false
    },
    "include": [
        "./lib/pkg.ts",
        "./lib/config.ts",
        "./lib/app.ts",
        "./lib/utils/logger.ts",
        "./lib/utils/rand-user-agent.ts",
        "./lib/utils/request-rewriter/fetch.ts",
        "./lib/utils/request-rewriter/get.ts",
        "./lib/utils/request-rewriter/index.ts",
        "./lib/utils/proxy/unify-proxy.ts",
        "./lib/utils/proxy/pac-proxy.ts",
        "./lib/utils/proxy/index.ts",
        "./lib/utils/ofetch.ts",
        "./lib/middleware/parameter.ts",
        "./lib/views/atom.tsx",
        "./lib/views/rss.tsx",
        "./lib/views/json.ts"
    ],
    "exclude": ["node_modules", "**/*.test.*", "**/*.spec.*"]
}
