{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "node",
        "jsx": "react-jsx",
        "jsxImportSource": "hono/jsx",
        "baseUrl": ".",
        "paths": {
            "@/*": ["./lib/*"]
        },
        "outDir": "./dist",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "declaration": true,
        "sourceMap": true,
        "resolveJsonModule": true,
        "allowJs": true,
        "noEmit": false,
        "strict": false,
        "noImplicitAny": false,
        "types": ["node"]
    },
    "include": [
        "./lib/**/*.ts",
        "./lib/**/*.tsx"
    ],
    "exclude": [
        "node_modules",
        "**/*.test.*",
        "**/*.spec.*",
        "./lib/pkg.ts"
    ]
}
