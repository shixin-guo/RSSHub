{
    "compilerOptions": {
        "composite": true,
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "jsx": "react-jsx",
        "jsxImportSource": "hono/jsx",
        "baseUrl": ".",
        "paths": {
            "@/*": ["./lib/*"]
        },
        "outDir": "./dist",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "declaration": true,
        "sourceMap": true,
        "resolveJsonModule": true,
        "allowJs": true,
        "noEmit": false,
        "strict": false,
        "noImplicitAny": false,
        "noEmitOnError": false,
        "incremental": true,
        "types": ["node"],
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "./lib/**/*.ts",
        "./lib/**/*.tsx"
    ],
    "exclude": ["node_modules", "**/*.test.*", "**/*.spec.*"]
}
