{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "node",
        "jsx": "react-jsx",
        "jsxImportSource": "hono/jsx",
        "baseUrl": ".",
        "paths": {
            "@/*": ["./lib/*"]
        },
        "outDir": "./dist",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "declaration": true,
        "sourceMap": true,
        "resolveJsonModule": true,
        "allowJs": true,
        "noEmit": false,
        "strict": false,
        "noImplicitAny": false,
        "noEmitOnError": true,
        "types": ["node"],
        "allowSyntheticDefaultImports": true,
        "preserveSymlinks": true
    },
    "include": [
        "./lib/pkg.ts",
        "./lib/config.ts",
        "./lib/app.ts",
        "./lib/utils/logger.ts",
        "./lib/utils/rand-user-agent.ts"
    ],
    "exclude": ["node_modules", "**/*.test.*", "**/*.spec.*"]
}
